<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordActivity">

    <View
        android:id="@+id/v_changepassword"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/tab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_cp_back"
        android:layout_width="37dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/abc_vector_test" />

    <TextView
        android:id="@+id/tv_changepassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="8dp"
        android:text="Change Password"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="360dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="46dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_changepassword">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_newpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="17dp"
                android:layout_marginTop="15dp"
                android:text="Choose your password:"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_oldpassword"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="26dp"
                android:inputType="numberPassword"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:drawableLeft="@drawable/ic_baseline_lock_24_blue"
                android:textSize="16sp"
                android:hint="Old Password"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/et_newpassword"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="26dp"
                android:inputType="numberPassword"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:drawableLeft="@drawable/ic_baseline_lock_24_blue"
                android:textSize="16sp"
                android:hint="New Password"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/et_confirmNewPassword"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="26dp"
                android:inputType="numberPassword"
                android:layout_marginTop="20dp"
                android:textColor="#000000"
                android:drawableLeft="@drawable/ic_baseline_lock_24_blue"
                android:textSize="16sp"
                android:hint="Confirm New Password"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btn_update_password"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="Update"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:backgroundTint="#2196F3"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>