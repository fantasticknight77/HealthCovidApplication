<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <View
        android:id="@+id/v_editprofile"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/tab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_ep_back"
        android:layout_width="37dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/abc_vector_test" />

    <TextView
        android:id="@+id/tv_editprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="146dp"
        android:layout_marginTop="8dp"
        android:text="Edit Profile"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="500dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="46dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_editprofile">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/tv_ep_username"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:text="Username:"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/et_ep_username"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="26dp"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/tv_ep_age"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:text="Age:"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/et_ep_age"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="26dp"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/tv_ep_gender"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:text="Gender:"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/et_ep_gender"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="26dp"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/tv_profile_contact"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:text="Contact No:"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/et_ep_contact"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="26dp"
                    android:inputType="phone"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/tv_ep_address"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:text="Address:"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/et_ep_address"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="26dp"
                    android:inputType="textMultiLine"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_update_profile"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="Update"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:backgroundTint="#2196F3"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>